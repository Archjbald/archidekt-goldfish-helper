{
  "manifest_version": 2,
  "name": "Archidekt Goldfish Helper",
  "version": "1.1",
  "description": "A Firefox extension with modular config and settings",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://archidekt.com/decks/*",
        "https://archidekt.com/playtester-v2/*"
      ],
      "js": [
        "settings.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "assets/styles.css",
    "assets/logo_clean.png",
    "assets/widget.html",
    "config/events.json"
  ]
}